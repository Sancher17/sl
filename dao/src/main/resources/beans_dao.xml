<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans.xsd
   http://www.springframework.org/schema/context
   http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="com.cafe" />

    <import resource="classpath*:beans_web.xml"/>

    <bean id = "goodsDao" class = "com.cafe.dao.GoodsDao"/>
    <bean id = "userDao" class = "com.cafe.dao.UserDao"/>
    <bean id = "categoryDao" class = "com.cafe.dao.CategoryDao"/>
    <bean id = "orderDao" class = "com.cafe.dao.OrderDao"/>
    <bean id = "nameGoodsDao" class = "com.cafe.dao.NameGoodsDao"/>
    <bean id = "storageDao" class = "com.cafe.dao.StorageDao"/>


</beans>

















