<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans.xsd
   http://www.springframework.org/schema/context
   http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="com.cafe.services"/>

    <bean id="facadeService" class="com.cafe.services.FacadeService"/>

    <bean id="goodsService" class="com.cafe.services.GoodsService"/>
    <bean id="usersServices" class="com.cafe.services.UsersService"/>
    <bean id="categoryService" class="com.cafe.services.CategoryService"/>
    <bean id="orderService" class="com.cafe.services.OrderService"/>
    <bean id="nameGoodsService" class="com.cafe.services.NameGoodsService"/>
    <bean id="storageService" class="com.cafe.services.StorageService"/>

</beans>